			map.put("pt_tel", URLDecoder.decode(patient.getPt_tel(),"UTF-8"));
			
			JSONObject resultJSON = JSONObject.fromObject(map);
			String result = callback + "(" + resultJSON.toString() + ")";
			return result;
	}
	
