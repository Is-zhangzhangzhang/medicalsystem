<!--主界面内容：我的病历列表-->
<div class="page">
    <div class="page-container">
        <div class="container">
            <!--二维码+病历-->
            <div class="row">
                <div class="wrapping80">
                    <div class="row" id="pt_pay">
                        <div class="text-center">
                            <img src="../../img/pay.jpg" alt="支付二维码">
                            <div>
                                <span>打开支付宝或微信二维码扫一扫支付！</span>
                            </div>
                        </div>
                    </div>
                    <button data-target="#pt_pay_success" data-toggle="modal" class="btn btn-success">付款成功</button>
                    <!--付款成功模态框-->
                    <div class="modal fade" id="pt_pay_success">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    <h4 class="modal-title">提示</h4>
                                </div>
                                <div class="modal-body text-center">
                                    <h1>支付成功！</h1>
                                    <div class="text-right">
                                        <a href="/font-end/html/patient/bookDoctor.html?paid=true" id="pa_to_comment"><strong>立刻去评价医生？</strong></a>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <buton class="btn btn-default" data-dismiss="modal">关闭</buton>
                                    <button type="button" class="btn btn-primary" id="cl_save">保存</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h4>详细信息：</h4>
                    <div>
                        <div class="row">
                            <span class="col-lg-3 col-md-3 text-center">姓名：<span>病人</span></span>
                            <span class="col-lg-3 col-md-3 text-center">性别：<span></span></span>
                            <span class="col-lg-3 col-md-3 text-center">年龄：<span></span></span>
                            <span class="col-lg-3 col-md-3 text-center">病历号：<span></span></span>
                        </div>
                        <div class="row">
                            <span class="col-lg-3 col-lg-offset-3 col-md-3 col-md-offset-3 text-center">科室：</span>
                            <span class="col-lg-3 col-md-3 text-center">门诊：</span>
                            <span class="col-lg-3 col-md-3 text-center">日期：</span>
                        </div>
                        <hr>
                        <div>
                            <strong>临床诊断：</strong>
                            <span id="record-disease">没毛病</span>
                        </div>
                        <div>
                            <h1>Rp:</h1>
                            <!--药品列表-->
                            <div>
                                <table class="table table-striped table-hover table-bordered" style="margin: 15px;">
                                    <thead>
                                    <tr>
                                        <th>药品名称</th>
                                        <th>药品用量</th>
                                        <th>药品价格</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <td>1111</td>
                                        <td>2222</td>
                                        <td>3333</td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                            <!--用法-->
                            <div>
                                <strong>用法：</strong>
                                <span id="record-eatday">？？</span>
                                <strong>次，服用：</strong>
                                <span>??</span>
                                <strong>天</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
