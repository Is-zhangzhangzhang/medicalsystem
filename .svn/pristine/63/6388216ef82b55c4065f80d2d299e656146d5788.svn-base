// 显示咨询和评论
$('.tab-show').click(function(){
    $('.tab-show').fadeOut();
    $('.consult-tab').fadeIn();
});

//问答详情界面
$('#consult li').click(function () {
    // console.log(this.innerHTML);
    window.location.href = "./consult.html";
});

//tab 页面切换
$('#consult a').click(function () {
    $(this).tab('show');
});
$('#comment a').click(function () {
    $(this).tab('show');
});

