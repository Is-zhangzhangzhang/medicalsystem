<!--挂号-->
<div class="page">
    <div class="page-container">
        <div class="container">
            <div class="row">
                <div class="wrapping80" id="book_content">
                    <div>
                        <!--选择科室-->
                        <div class="book-dept">
                            <h4>选择科室</h4>
                            <div class="tag"></div>
                        </div>
                        <!--选择门诊-->
                        <div class="book-clinic">
                            <h4>选择门诊</h4>
                            <h5></h5>
                            <div class="tag"></div>
                        </div>
                        <!--选择日期-->
                        <div class="book-day">
                            <h4>选择日期</h4>
                            <div class="tag">
                            </div>
                        </div>
                        <!--选择医生-->
                        <div class="book-who">
                            <h4>选择医生</h4>
                            <div class="tag">
                                <a href="#" class="tag">华医生</a>
                                <a href="#" class="tag">李医生</a>
                                <a href="#" class="tag">陈医生</a>
                                <a href="#" class="tag">张医生</a>
                                <a href="#" class="tag">找医生</a>
                            </div>
                        </div>
                    </div>
                    <div class="doctor-page">
                        <!--医生简介+照片-->
                        <div class="row" id="book_dt_intro">
                            <div class="col-md-5 text-center book-dt-img">
                                <img src="../../img/doctor.jpg" alt="医生照片">
                            </div>
                            <div class="col-md-7 book_dt_intro_content"></div>
                        </div>
                        <!--挂号时间选择-->
                        <div class="time-table">
                            <table class="table table-striped table-bordered">
                                <tbody>
                                <tr>
                                    <th rowspan="2">上午</th>
                                    <td>8:00 - 10:00</td>
                                    <td>可预约，剩余：<span name="book_remain">x</span>&nbsp;<span
                                            name="book_money">(20元)</span></td>
                                </tr>
                                <tr>
                                    <td>10:00 - 12:00</td>
                                    <td>可预约，剩余：<span name="book_remain">x</span>&nbsp;<span
                                            name="book_money">(20元)</span></td>
                                </tr>
                                <tr>
                                    <th rowspan="2">下午</th>
                                    <td>14:00 - 16:00</td>
                                    <td>可预约，剩余：<span name="book_remain">x</span>&nbsp;<span
                                            name="book_money">(20元)</span></td>
                                </tr>
                                <tr>
                                    <td>16:00 - 18:00</td>
                                    <td>可预约，剩余：<span name="book_remain">x</span>&nbsp;<span
                                            name="book_money">(20元)</span></td>
                                </tr>
                                </tbody>
                            </table>
                            <div class="book-sure-msg alert alert-warning">
                                <h4>确认挂号信息</h4>
                                <ul class="list-group text-center">
                                    <li class="list-group-item">检查费：xxx</li>
                                    <li class="list-group-item">科室：xxxx</li>
                                    <li class="list-group-item">医生：xxxx</li>
                                    <li class="list-group-item">就诊时间：xxxx</li>
                                    <li class="list-group-item">就诊人：xxx</li>
                                </ul>
                                <div class="text-right">
                                    <button class="btn btn-primary" id="book-cancel">取消挂号</button>
                                    <button class="btn btn-success" id="book-ok" data-target="#book-modal">确认挂号
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!--确认挂号？ 模态框-->
                        <div class="modal fade" id="book-modal">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h4>提示</h4>
                                    </div>
                                    <div class="modal-body text-center">
                                        <h3><span class="glyphicon glyphicon-ok-circle"></span>&nbsp;挂号成功！</h3>
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-primary" data-dismiss="modal">确定</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <!--展开评论和咨询链接-->
                        <div class="row text-center">
                            <a href="void:javascript(0)" class="tab-show">查看医生问答和评论 ></a>
                        </div>
                        <!--评论和咨询-->
                        <div class="row" id="consult-tab">
                            <ul class="nav nav-tabs">
                                <li role="presentation" class="active">
                                    <a href="#consult" data-toggle="tab">医生问答</a></li>
                                <li role="presentation">
                                    <a href="#comment" data-toggle="tab">医生评论</a></li>
                            </ul>
                            <div class="tab-content">
                                <!--医生问答标签页内容-->
                                <div class="tab-pane fade in active" id="consult">
                                    <ul class="list-group" id="book_consult_ul"></ul>
                                    <!--问答分页-->
                                    <nav aria-label="Page navigation" class="text-right" id="book_consult_page_ul">
                                        <ul class="pagination">
                                            <!--<li class="disabled">-->
                                                <!--<span aria-label="Previous">-->
                                                    <!--<span aria-hidden="true">&laquo;</span>-->
                                                <!--</span>-->
                                            <!--</li>-->
                                            <!--<li class="active"><span>1</span></li>-->
                                            <!--<li><span>2</span></li>-->
                                            <!--<li><span>3</span></li>-->
                                            <!--<li><span>4</span></li>-->
                                            <!--<li><span>5</span></li>-->
                                            <!--<li>-->
                                                <!--<span aria-label="Next">-->
                                                    <!--<span aria-hidden="true">&raquo;</span>-->
                                                <!--</span>-->
                                            <!--</li>-->
                                        </ul>
                                    </nav>
                                    <!--发帖区 医生没有记得删除-->
                                    <div>
                                        <div class="form-group">
                                            <div class="input-group input-group-lg">
                                                <span class="input-group-addon">标题：</span>
                                                <input type="text" class="form-control" placeholder="请输入标题">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <textarea class="form-control" rows="8"></textarea>
                                        </div>
                                        <div class="from-group">
                                            <button class="btn btn-success pull-right">提交</button>
                                        </div>
                                    </div>
                                </div>
                                <!--评论标签页-->
                                <div class="tab-pane fade" id="comment">
                                    <ul class="list-group">
                                        <li class="list-group-item">
                                            <div class="comment-context">
                                                <div class="row">
                                                    <div class="col-lg-1 col-md-1 text-center">
                                                        <img src="../../img/inithead.jpg" alt="评论者头像">
                                                    </div>
                                                    <div class="col-lg-8 col-md-8">
                                                        <strong>张嘉怡哇:<br/></strong>
                                                        <span>我觉得这个医生非常的好！！！</span>
                                                    </div>
                                                    <div class="col-lg-3 col-md-3">
                                                        <span class="pull-right">2018-07-23</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                        <li class="list-group-item">
                                            <div class="comment-context">
                                                <div class="row">
                                                    <div class="col-lg-1 col-md-1 text-center">
                                                        <img src="../../img/inithead.jpg" alt="评论者头像">
                                                    </div>
                                                    <div class="col-lg-8 col-md-8">
                                                        <strong>袁晓如哇:<br/></strong>
                                                        <span>医生挺好的！！！</span>
                                                    </div>
                                                    <div class="col-lg-3 col-md-3">
                                                        <span class="pull-right">2018-07-23</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                    <div class="pa_comment">
                                        <textarea class="form-control" rows="3"></textarea>
                                        <div class="text-right">
                                            <button class="btn btn-primary">发表评论</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
