/**
 * 登录界面点击登录跳转到主界面
 */
$('#login-button').click(function(event){
    event.preventDefault();
    $('.lo-form').fadeOut(500);
    $('.wrapper').addClass('form-success');
    setTimeout(function () {
        // TODO 获得登录用户名和密码后判断身份进行页面跳转
        var username = $('#lo-username').val();
        if(username == "0") //管理员
        {
            //TODO 跳转管理员
        }
        else if(username == "1")  //医生
        {
            window.location.href = "../../html/doctor/main.html";
        }
        else
            window.location.href = "../../html/patient/main.html";
    },1000);
});

